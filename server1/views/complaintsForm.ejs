<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Complaints Form</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <h1 style="font-family:Sofia;font-size:3rem;" class="h-100 mt-5 d-flex align-items-center justify-content-center"><strong>Complaint Portal</strong></h1>
    <hr>
    <div class="h-100 d-flex align-items-center justify-content-center">
    
    <form name="complaintForm" class="w-75 my-5" action="/complaints" method="POST" onsubmit="return validateForm()" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="exampleFormControlInput2" class="form-label">Name</label>
        <input
          type="text"
          class="form-control"
          name="name"
          id="exampleFormControlInput2"
          placeholder="name"
        />
      </div>

      <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label"
          >Email address</label
        >
        <input
          name="email"
          type="email"
          class="form-control"
          id="exampleFormControlInput1"
          placeholder="name@example.com"
        />
      </div>
      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label"
          >Complaint</label
        >
        <textarea
          name="description"
          class="form-control"
          id="exampleFormControlTextarea1"
          rows="3"
        ></textarea>
      </div>
      <div class="mb-3">
        <label for="formFile" class="form-label"
          >Upload Image</label
        >
        <input class="form-control" type="file" id="formFile" name="image"/>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
  <script>
    const validateForm=()=>{
      let x=document.forms["complaintForm"]["image"].files[0].type;
      if(x.includes("image"))
        return true;
      else
      {
        alert("Invalid file type!")
        return false;
      }
    }
  </script>
  </body>
</html>
