<section class=" text-center text-lg-start">
    
    <div class="card mb-3">
      <div class="row g-0 d-flex align-items-center">
        
        <div class="col-lg-8">
          <div class="card-body py-5 px-md-5">
            <h2 class="mb-5 mt-5"><strong>Maintenance Scripts Portal</strong></h2>
            <hr style="height:30px"></hr>
            <form onload="er()" method="post">
              <!-- Username input -->
              <div class="form-outline mb-4 align-items-center">
                <label class="form-label" for="form2Example1" >Username</label>
                <input type="text" name="username" id="form2Example1" class="form-control" required pattern="[a-zA-Z0-9]+"/>
              </div>
  
              <!-- Password input -->
              <div class="form-outline mb-4 align-items-center">
                <label class="form-label" for="form2Example2" >Password</label>
                <input type="password" name="psswd" id="form2Example2" class="form-control" required pattern="[a-zA-Z0-9_@]+"/>
              </div>
              <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
              <% if(err) { %>
                <h6 class="text-danger">Invalid Username or Password!</h4>                
              <%}%>
            </div>
              
              <!-- Submit button -->
  
            </form>
  
          </div>
        </div>
      </div>
    </div>
